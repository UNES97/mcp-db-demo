{
  "name": "apm-terminal-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for APM Terminal Database Operations",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "apm-terminal-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "dev": "node --loader ts-node/esm src/index.ts",
