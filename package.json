    "chat": "node --loader ts-node/esm src/chat-server.ts",
    "chat:prod": "node build/chat-server.js"
  },
  "keywords": [
    "mcp",
    "apm",
    "terminal",
    "database"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "install": "^0.13.0",
    "mysql2": "^3.11.5",
    "npm": "^11.7.0",
    "openai": "^4.104.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
