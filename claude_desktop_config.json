{
  "mcpServers": {
    "apm-terminal": {
      "command": "node",
      "args": [
        "/Applications/MAMP/htdocs/MCP/build/index.js"
      ],
      "env": {
        "DB_HOST": "localhost",
        "DB_PORT": "3306",
        "DB_USER": "your_database_user",
        "DB_PASSWORD": "your_database_password",
        "DB_NAME": "apm_terminal",
        "DB_CONNECTION_LIMIT": "10"
      }
    }
  }
}
